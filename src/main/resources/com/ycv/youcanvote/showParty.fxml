<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="1000.0" prefWidth="1000.0"
      stylesheets="@generalStyle.css">
    <VBox fx:id="formSpace" style="-fx-alignment: center; -fx-fill-width: true;">
        <padding>
            <Insets bottom="15.0" left="25.0" right="25.0" top="25.0"/>
        </padding>

    </VBox>
    <HBox style="-fx-alignment: center">
        <Label fx:id="resultText" style="-fx-text-fill: rgb(255,0,0);">
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
        </Label>
    </HBox>
    <HBox style="-fx-spacing: 65; -fx-alignment: center;">
        <padding>
            <Insets bottom="15.0" left="25.0" right="25.0" top="25.0"/>
        </padding>
        <Button fx:id="back" style="-fx-font-size: 20;" styleClass="btn" text="Indietro"/>
        <Button fx:id="modify" style="-fx-font-size: 20;" styleClass="btn" text="Modifica candidato"/>
        <Button fx:id="add" style="-fx-font-size: 20;" styleClass="btn" text="Aggiungi candidato"/>
        <Button fx:id="confirm" style="-fx-font-size: 20;" styleClass="btn" text="Conferma"/>
    </HBox>


</VBox>
